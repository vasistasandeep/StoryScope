{
    "version": 2,
    "builds": [
        {
            "src": "apps/web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "apps/api/server.cjs",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/apps/api/server.cjs"
        },
        {
            "src": "/(.*)",
            "dest": "/apps/web/dist/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}